---
import astroLogo from "../assets/astro.svg";
import background from "../assets/background.svg";
import NormalDistChart from "../components/NormalDistAnimation.astro";
// import VoltageAnimation from "../components/VoltageAnimation.astro";
// import { Github } from "lucide-react";
import Github from "../icons/github.svg";
import LinkedIn from "../icons/linkedin.svg";
import Email from "../icons/email.svg";
---

<div class="h-full">
  <!-- <img id="background" src={background.src} alt="" fetchpriority="high" /> -->
  <main class="min-h-full flex flex-col items-center justify-center py-8">
    <NormalDistChart id="chart-wrapper" />
    <!-- <VoltageAnimation id="three-phase-chart" /> -->

    <div class="text-center mt-4 mb-6">
      <h1 class="text-4xl font-extrabold">Joy Paulsen</h1>
      <p class="text-lg font-thin">Data Scientist, Engineer, Builder</p>
    </div>
    <section
      id="links"
      class="flex flex-col items-center min-w-[300px] gap-3 mb-4 text-lg font-semibold"
    >
      <a
        class="button w-full flex justify-center items-center rounded-none"
        href="/about">About Me</a
      >
      <a
        class="button w-full flex justify-center items-center rounded-none"
        href="https://docs.astro.build">Blog</a
      >
      <a
        class="button w-full flex justify-center items-center rounded-none"
        href="https://docs.astro.build"
      >
        <div class="w-6 h-6 mr-4">
          <Github style="height: 100%; width: 100%;" />
        </div>Github</a
      >
      <a
        class="button w-full flex justify-center items-center rounded-none"
        href="https://docs.astro.build"
        ><div class="w-6 h-6 mr-4">
          <LinkedIn style="height: 100%; width: 100%;" />
        </div>LinkedIn</a
      >
      <a
        class="button w-full flex justify-center items-center rounded-none"
        href="https://docs.astro.build"
        ><div class="w-6 h-6 mr-4">
          <Email style="height: 100%; width: 100%;" />
        </div>Email</a
      >
